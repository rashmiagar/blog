<%- model_class = Post -%>
<% @post ||= post %>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>


<p>Posted on: <%= @post.created_at.strftime("%B %d %Y")%> | <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_post_path(@post) %> |  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              post_path(@post),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }  %></p>
<hr>
<%= image_tag @post.image_file.thumb.url, class: "img", style: "float:left;margin-right:10px"%>
<hr>
<p><%= @post.body%></p>

<%= link_to t('.back', :default => t("helpers.links.back")),
              posts_path, :class => 'btn btn-default'  %>
