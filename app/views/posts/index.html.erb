<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div style="float:right">
  <%= link_to 'New Post',
              new_post_path,
              :class => 'btn btn-default' %>
</div>



<h1> Blog </h1>
<p>by <%= author(@posts.first) %></p>




<% @posts.each do |post| %>

<div class="container-fluid">       
  <h4>Posted on: <%= post.created_at.strftime("%B %d %Y")%> | <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_post_path(post), :class => 'btn btn-default btn-xs' %> |  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                post_path(post),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-default'  %>
               <%= link_to 'Share', share_post_path(post), :method => :post, class: 'btn btn-xs btn-default' %>
              <% if post.published != true %>
              <%= link_to 'Publish', publish_post_path(post), :method => :post, class: 'btn btn-xs btn-default' %>
              <% end %> 

                </h4>
  <hr>
  <%= image_tag post.image_file.thumb.url, class: "img", style: "float:left;margin-right:10px"%>
  <hr>
  <p><%= post.body%></p>

</div>
      <% end %>
