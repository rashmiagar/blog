<%= form_for @post, :html => { :class => "form-horizontal post" } do |f| %>

  <% if @post.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :body, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :body, :class => 'form-control' %>
    </div>
    <%=f.error_span(:body) %>
  </div>

  <div class="delete_image">
    X 
  </div>
   <%= image_tag @post.image_file.thumb.url %>
  <%= hidden_field :_destroy, value: !f.object.image_file %>
  
  <div class="form-group">
    <%= f.label :image_file, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.file_field :image_file, accept: 'image/*', :class => 'form-control' %>
    </div>
    <%=f.error_span(:image_file) %>
  </div>

  <div class="form-group">
    <%= f.label :published, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :published, :class => 'form-control' %>
    </div>
    <%=f.error_span(:published) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
